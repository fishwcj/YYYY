<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/pop_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/l"
            android:textColor="#000000" />
        <!-- 下大部分 -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D1D1D1" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:orientation="horizontal" >

            <!-- 一级菜单 -->

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/spjs"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="@string/spjs"
                        android:textColor="#000000" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#D1D1D1" />

                    <TextView
                        android:id="@+id/yfsp"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="@string/yfsp"
                        android:textColor="#000000" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#D1D1D1" />

                    <TextView
                        android:id="@+id/cxjt"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="@string/cxjt"
                        android:textColor="#000000" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#D1D1D1" />

                    <TextView
                        android:id="@+id/jjxf"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="@string/jjxf"
                        android:textColor="#000000" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#D1D1D1" />

                    <TextView
                        android:id="@+id/xxjx"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="@string/xxjx"
                        android:textColor="#000000" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#D1D1D1" />

                    <TextView
                        android:id="@+id/xxyl"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="@string/xxyl"
                        android:textColor="#000000" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#D1D1D1" />

                    <TextView
                        android:id="@+id/rjjw"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="@string/rjjw"
                        android:textColor="#000000" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#D1D1D1" />

                    <TextView
                        android:id="@+id/ylbj"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="@string/ylbj"
                        android:textColor="#000000" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#D1D1D1" />

                    <TextView
                        android:id="@+id/qtzx"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="@string/qtzx"
                        android:textColor="#000000" />
                </LinearLayout>
            </ScrollView>

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#D1D1D1" />
            <!-- 二级菜单 -->

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/two"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >
                    </LinearLayout>

                    <TextView
                        android:id="@+id/zdy"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="自定义"
                        android:textColor="#000000" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#D1D1D1" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>